<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/u"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mahfuz.retrofitexample.UpdateProductActivity">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/uProductNameEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="name" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/uProductPriceEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/uProductNameEt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="price" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/updatePRoductBt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/uProductPriceEt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Update Product" />
</RelativeLayout>
